import java.util.Scanner;  // Importing Scanner for user input

public class UserBirthYearCalculation {
    public static void main(String[] args) {
        // Create a Scanner object to read input
        Scanner scanner = new Scanner(System.in);
        
        // Input: Ask the user for their year of birth
        System.out.print("Enter your year of birth: ");
        int birthYear = scanner.nextInt();
        
        // Input: Ask the user for their age
        System.out.print("Enter your age: ");
        int age = scanner.nextInt();
        
        // Step 1: Double the birth year
        int result = birthYear * 2;
        
        // Step 2: Add 5
        result = result + 5;
        
        // Step 3: Multiply the result by 50
        result = result * 50;
        
        // Step 4: Add their age
        result = result + age;
        
        // Step 5: Subtract 250
        result = result - 250;
        
        // Step 6: Divide by 100
        result = result / 100;
        
        // Output the final result and interpret it for the user
        System.out.println("The result is: " + result);
        System.out.println("This represents your birth year!");
        
        // Close the scanner object
        scanner.close();
    }
}
